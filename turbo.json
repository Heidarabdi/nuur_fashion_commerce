{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env.*local",
    "tsconfig.json",
    "package.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.ts", "src/**/*.tsx", ".env*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    },
    "format": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
