{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "composite": false,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "preserveSymlinks": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}

