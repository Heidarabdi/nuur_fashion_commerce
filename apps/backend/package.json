{
  "name": "@nuur-fashion-commerce/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "test": "bun test --preload ./tests/setup.ts",
    "lint": "eslint src/",
    "typecheck": "bunx tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:seed-admin": "bun run scripts/seed-admin.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@nuur-fashion-commerce/shared": "workspace:*",
    "better-auth": "^1.4.9",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.10.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.5",
    "resend": "^6.6.0",
    "slugify": "^1.6.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@types/bun": "^1.1.15",
    "@types/node": "^22.10.5",
    "drizzle-kit": "^0.30.1",
    "typescript": "^5.9.3"
  }
}
