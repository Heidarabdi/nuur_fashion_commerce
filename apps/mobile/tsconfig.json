{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@nuur-fashion-commerce/shared": [
        "../../packages/shared/src/index.ts"
      ],
      "@nuur-fashion-commerce/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@shared/*": [
        "../../packages/shared/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
